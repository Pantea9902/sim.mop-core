<!--begin::Body-->
<body id="kt_body" class="bg-body" style="background-position:center">
	<!--begin::Main-->
	<div class="d-flex flex-column flex-root">
		<!--begin::Authentication - Sign-in -->
		<div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed" style="background-image: url(assets/media/Img/1024.jpg); ">
			<!--begin::Content-->
			<div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
				<!--begin::Logo-->
				<h1 class="text-dark mb-3">سامانه پایش ساخت داخل </h1>
				<!--end::Logo-->
				<div class="Scriptcontent">
					@using (Html.BeginForm("Login", "Users", FormMethod.Post))
					{
						<!--begin::Wrapper-->
						<div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
							<!--begin::Form-->
							<div class="form">
							@* <form class="form w-100" novalidate="novalidate" id="kt_sign_in_form"> *@
							<form asp-action="Login" asp-controller="Users" method="post">
								<!--begin::Heading-->
								<div class="text-center mb-10">
									<!--begin::Title-->
									<h2 class="text-dark mb-3">ورود</h2>
									<!--end::Title-->
									
								</div>
								<!--begin::Heading-->
								<!--begin::Input group-->
									<div class="fv-row mb-10 fv-plugins-icon-container">
									<!--begin::Wrapper-->
									@* <div class="d-flex flex-stack mb-2"> *@
										<label class="form-label fw-bolder text-dark fs-6 mb-0" style="font-family:'B Nazanin';">نام کاربری</label>
												
									<!--end::Wrapper-->
									<!--begin::Input-->
										<div class="inputBx" type="text" >

											@Html.TextBoxFor(m => m.fldUserName, new { @class = "form-control form-control-lg form-control-solid" })
											<span asp-validation-for="fldUserName" class="text-danger" class="icon-inside" name="fldUserName" autocomplete="off"></span>
										
							         </div>
									<!--end::Input-->
							
								<!--end::Input group-->
								<!--begin::Input group-->
									<div class="fv-row mb-10 fv-plugins-icon-container">
									<!--begin::Label-->
											<label class="form-label fs-6 fw-bolder text-dark" style="font-family:'B Nazanin';">رمز عبور</label>
									<!--end::Label-->
									<!--begin::Input-->
										<div class="inputBx password" type="password">
												@Html.PasswordFor(m => m.fldPassword, new { @class = "form-control form-control-lg form-control-solid" })
												<span asp-validation-for="fldPassword" class="text-danger" name="fldPassword" class="icon-inside" ></span>
										
										</div>
									<!--end::Input-->
								</div>
								<!--end::Input group-->
								<!--begin::Actions-->
								<div class="text-center">
									<!--begin::Submit button-->
										<button type="submit" id="kt_sign_in_submit" class="btn btn-lg btn-primary w-100 mb-5" >
											<span class="indicator-label">Log In</span>
										@* 	<span class="indicator-progress">
												Please wait...
												<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
											</span> *@
									</button>
									<!--end::Submit button-->
								</div>
								<!--end::Actions-->
							</form>
						    </div>
							<!--end::Form-->
						</div>
						<!--end::Wrapper-->
					}
				</div>
			</div>
			<!--end::Content-->
			<!--begin::Footer-->
			<div class="d-flex flex-center flex-column-auto p-10">
				<!--begin::Links-->
				<div class="d-flex align-items-center fw-bold fs-6">
